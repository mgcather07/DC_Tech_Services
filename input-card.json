
{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "text": "Drummond Locations",
            "wrap": true,
            "size": "Medium",
            "weight": "Bolder"
        },
        {
            "type": "TextBlock",
            "text": "Enter location name:",
            "wrap": true
        },
        {
            "type": "Input.Text",
            "placeholder": "Location",
            "id": "location"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Get Location",
                    "data": {
                        "callback_keyword": "location"
                    }
                }
            ]
        }
    ]
}
